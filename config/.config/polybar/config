blue = ${xrdb:color4:#0af}
magenta = ${xrdb:color5:#e16}
cyan = ${xrdb:color6:#098}
white = ${xrdb:color7:#cdd}


[bar/beep]
width = 100%
height = 25

radius = 6.0
fixed-center = true

