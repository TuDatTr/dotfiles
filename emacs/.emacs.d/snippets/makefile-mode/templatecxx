# -*- mode: snippet -*-
# name: templatecxx
# key: templatecxx
# expand-env: ((yas-indent-line 'fixed) (yas-wrap-around-region 'nil))
# --
CXX = g++
SRC = \$(wildcard src/*.cpp)
OBJ = \$(SRC:.cpp=.o)
CXXFLAGS = --std=c++11
RM = rm -f
TARGET = $1

all: \$(TARGET)

\$(TARGET): \$(OBJ)
	\$(CXX) \$(CXXFLAGS) -o \$@ \$^

clean:
	\$(RM) \$(TARGET) \$(OBJ)