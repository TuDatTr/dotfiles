# -*- mode: snippet -*-
# name: templatec
# key: templatec
# expand-env: ((yas-indent-line 'fixed) (yas-wrap-around-region 'nil))
# --
CC = gcc
SRC = \$(wildcard src/*.c)
OBJ = \$(SRC:.c=.o)
CFLAGS = 
RM = rm -f
TARGET = $1

all: \$(TARGET)

\$(TARGET): \$(OBJ)
	\$(CC) \$(CFLAGS) -o \$@ \$^

clean:
	\$(RM) \$(TARGET) \$(OBJ)